<body>

    <section class="list">
        <ul>
            <% subjectBBB.forEach(function(subject) { %>
            <li class="subjectName">
                <h4><%= subject.name %>&nbsp(<%= subject.students.length%>)</h4>
            </li>
            <% subject.students.forEach(function(student){ %>
            <li><%= student.name %></li>
            <% }); %>
            <% }); %>
        </ul>
    </section>
            <h5>Add tech-watch</h5>
    <div class="addtechwatch">
        <form action="/subject" method="POST">
            <label for="insertsubject" class="label">Subject</label>
            <label for="insertdeadline" class="label">Deadline</label>
            <label for="insertnbrstudent" class="label">Number Students</label>
            <input type="text" placeholder="Project Name" name="project">
            <input type="date" name="deadline" id="start">
            <input type="text" placeholder="Group Members" name='nbr'>
            <button type="submit">Create Tech-watch</button>
        </form>
    </div>

